@model PagedList.IPagedList<SlickScheduler.Models.User>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}

<h2>List of Students</h2>
@using (Html.BeginForm("Index", "Advisor", FormMethod.Get))
{
    <div class="">
        @Html.TextBox("Search", "", new { @class = "form-control col-lg-4", placeholder = "Search" })
        <input type="submit" class="btn btn-default col-lg-1" value="Search" />
        <a href=@Url.Action("Index", "Advisor") class="btn btn-primary">Reset</a>
    </div>
}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td colspan="5"><center><strong>Students</strong></center></td>
        </tr>
    </thead>
    <tbody>
        <tr class="active">
            <td class="active"><strong>@Html.ActionLink("WNumber", "Index", new { sortOrder = ViewBag.WNumSort, currentFilter = ViewBag.CurrentFilter})</strong></td>
            <td class="active"><strong>@Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSort, currentFilter = ViewBag.CurrentFilter})</strong></td>
            <td class="active"><strong>Email</strong></td>
            <td class="active"><strong>Action</strong></td>
        </tr>
        @foreach (var u in Model)
        {

            <tr>
                <td>@u.WNumber</td>
                <td>@u.FirstName @u.LastName</td>
                <td>@u.Email</td>
                <td><a href="@Url.Action("Scheduler", "Home", new { email = u.Email })">View Plan</a></td>
            </tr>
            }

    </tbody>
</table>
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))