@model  PagedList.IPagedList<SlickScheduler.Models.Plan>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ManagePlans";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Plans</h2>
@using (Html.BeginForm("ManagePlans", "Admin", FormMethod.Get))
{
    <div>
        @Html.TextBox("Search", ViewBag.CurrentFilter as string, new { @class = "form-control col-lg-4", placeholder = "Search" })
        <input type="submit" class="btn btn-default col-lg-1" value="Search" />
        <a href=@Url.Action("ManagePlans", "Admin") class="btn btn-primary">Reset</a>
        <a href=@Url.Action("AddPlan", "Admin") class="btn btn-success">Add New Plan</a>
    </div>
}
@if (Model.PageCount == 0)
{
    <h4>There are no results matching your search!</h4>
}
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td colspan="5"><center><strong>Plans</strong></center></td>
        </tr>
    </thead>
    <tbody>
        <tr class="active">
            <td class="active"><strong>@Html.ActionLink("Major", "ManagePlans", new { sortOrder = ViewBag.MajorSort, currentFilter = ViewBag.CurrentFilter })</strong></td>
            <td class="active"><strong>@Html.ActionLink("Concentration", "ManagePlans", new { sortOrder = ViewBag.ConcSort, currentFilter = ViewBag.CurrentFilter })</strong></td>
            <td class="active"><strong>@Html.ActionLink("Catalog Year", "ManagePlans", new { sortOrder = ViewBag.CatSort, currentFilter = ViewBag.CurrentFilter })</strong></td>
            <td class="active"><strong>Action</strong></td>
        </tr>
        @foreach (var p in Model)
        {

            <tr>
                <td>@p.Major</td>
                <td>@p.Concentration</td>
                <td>@p.CatalogYear</td>
                <td>
                    @Html.ActionLink("Edit Plan", "EditPlan", new { planID = p.PlanId })
                </td>
            </tr>
        }

    </tbody>
</table>


<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("ManagePlans",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))



