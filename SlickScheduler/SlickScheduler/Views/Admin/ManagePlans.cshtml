@model  PagedList.IPagedList<SlickScheduler.Models.Plan>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ManagePlans";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Plans</h2>
<script type="text/javascript" language="Javascript"
        src="http://ajax.aspnetcdn.com/ajax/jquery/jquery-1.4.1.min.js">
    $(function () {
        $(document).tooltip();
    });
</script> 
@using (Html.BeginForm("ManagePlans", "Admin", FormMethod.Get))
{
    <div>
        @Html.TextBox("Search", ViewBag.CurrentFilter as string, new { @class = "form-control col-lg-4", placeholder = "Search" })
        <input type="submit" class="btn btn-default col-lg-offset-0" value="Search" />
        <a href=@Url.Action("ManagePlans", "Admin") class="btn btn-primary">Reset</a>
        <a href=@Url.Action("AddPlan", "Admin") class="btn btn-success">Add New Plan</a>
    </div>
}
@if (Model.PageCount == 0)
{
    <h4>There are no results matching your search!</h4>
}
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td colspan="5"><center><strong>Plans</strong></center></td>
        </tr>
    </thead>
    <tbody>
        <tr class="active">
            <td class="active"><strong>Major<a href="@Url.Action("ManagePlans", new { sortOrder = ViewBag.MajorSort, currentFilter = ViewBag.CurrentFilter})" class="glyphicon @ViewBag.SortIconMaj btn-link col-lg-offset-8" title="Sort by Major"></a></strong></td>
            <td class="active"><strong>Concentration<a href="@Url.Action("ManagePlans", new { sortOrder = ViewBag.ConcSort, currentFilter = ViewBag.CurrentFilter })" class="glyphicon @ViewBag.SortIconCon btn-link col-lg-offset-8" title="Sort by Concentration"></a></strong></td>
            <td class="active"><strong>Catalog Year<a href="@Url.Action("ManagePlans", new { sortOrder = ViewBag.CatSort, currentFilter = ViewBag.CurrentFilter })" class="glyphicon @ViewBag.SortIconCat btn-link col-lg-offset-8"  title="Sort by Catalog Year"></a></strong></td>
            <td class="active"><strong>Action</strong></td>
        </tr>
        @foreach (var p in Model)
        {

            <tr>
                <td>@p.Major</td>
                <td>@p.Concentration</td>
                <td>@p.CatalogYear</td>
                <td>
                    <a href="@Url.Action("EditPlan", new { planId = p.PlanId })" class="glyphicon glyphicon-edit btn-link" title="Click to edit plan"></a>
                    <a href="@Url.Action("RemovePlan", new { planId = p.PlanId })" onclick="return confirm('Are you sure you want to delete this plan?')" class="glyphicon glyphicon-minus-sign btn-link" title="Click to permanently remove plan"></a>
                    @if (p.Published)
                    {
                        <a href="@Url.Action("UnpublishPlan", new { planId = p.PlanId})" onclick="return confirm('Are you sure you want to unpublish this plan?')" class="glyphicon glyphicon-cloud-download btn-link" title="Click to unpublish this plan"></a>
                    }
                    else
                    {
                        <a href="@Url.Action("PublishPlan", new {planId = p.PlanId })" onclick="return confirm('Are you sure you want to publish this plan?')" class="glyphicon glyphicon-cloud-upload btn-link" title="Click to publish this plan"></a>
                    }
                </td>
            </tr>
        }

    </tbody>
</table>


<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("ManagePlans",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))



