@model SlickScheduler.Models.User
@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Log In</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Email or Password is Incorrect", new { @class = "text-danger col-lg-2" })
    <form class="form-horizontal">
        <fieldset>
            <div class="form-group">
                <div class="col-lg-2">
                    @Html.LabelFor(u => u.Email, new { @class = "control-label" })
                </div>
                <div class="col-lg-10">
                    @Html.TextBoxFor(u => u.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(u => u.Email, String.Empty, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-2">
                    @Html.LabelFor(u => u.Password, new { @class = "control-label" })
                </div>
                <div class="col-lg-10">
                    @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(u => u.Password, String.Empty, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-2">
                    <button type="submit" class="btn  btn-default" value="LogIn">Submit</button>
                </div>
            </div>
        </fieldset>
    </form>

    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-2">
            <p>Forgot your password?<a href="#">Reclaim Your Account.</a></p>
        </div>
        <div class="col-lg-2">
            <p>Are you a new user? @Html.ActionLink("Register Here.", "Register", "Users")</p>
        </div>
    </div>
}