        appInsights.trackPageView();

        $(document).ready(function () {
            $('a.back-to-top').hide();
            $(function () {
                $(window).scroll(function () {
                    if ($(window).scrollTop() > 100) {
                        $('a.back-to-top').fadeIn();
                    } else {
                        $('a.back-to-top').fadeOut();
                    }
                });
            });
            $('a.back-to-top').click(function (event) {
                event.preventDefault();
                $('html, body').animate({ scrollTop: 0 }, 300);
            });
        });
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Slick Scheduler", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "Index", "Home", null, null, "About", null, null )</li>
                    <li>@Html.ActionLink("Contact", "Index", "Home", null, null, "Contact", null, null)</li>
                    @if (Request.IsAuthenticated)
                    {
                    <li>@Html.ActionLink("Scheduler", "Scheduler", "Home")</li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink(@Html.Encode(User.Identity.Name), "Index", "Users")</li>
                        <li>@Html.ActionLink("Log Out", "Logout", "Users")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Register", "Register", "Users")</li>
                        <li>@Html.ActionLink("Log In", "Login", "Users")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <a href="javascript:scroll(0,0)" class="back-to-top" style="display: none;"><h1 style="font-size:50px; opacity:0.75;" class="glyphicon glyphicon-circle-arrow-up" data-toggle="tooltip" title="Back to Top"></h1></a>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Slick Scheduler</p>
        </footer>
    </div>


</body>
</html>
